use_frameworks!
source 'https://github.com/CocoaPods/Specs.git'

target "Remote Helper" do
  platform :ios, '8.0'
  # Swift
  pod 'Alamofire'
  pod 'PasscodeLock', :git => 'https://github.com/venj/SwiftPasscodeLock.git', :branch => 'master'
  pod 'ReachabilitySwift'
  pod 'Fuzi'
  #pod 'Kanna'
  pod 'SwiftEntryKit', :git => 'https://github.com/imvenj/SwiftEntryKit.git', :branch => 'master'
  pod 'QuickLayout', :git => 'https://github.com/imvenj/QuickLayout.git', :branch => 'master'

  # Objective-C
  pod 'InAppSettingsKit', '~> 2.7'
  pod 'MWPhotoBrowser', :git => 'https://github.com/venj/MWPhotoBrowser.git', :branch => 'master'
  pod 'TOWebViewController', :git => 'https://github.com/venj/TOWebViewController.git'
end

target "Remote Helper Mac" do
  platform :osx, '10.10'
  pod 'Alamofire'
  pod 'ReachabilitySwift'
  pod 'Fuzi'
end
